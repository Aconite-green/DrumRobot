
{
    "version": "2.0.0",
    "tasks": [
        {
			"type": "cppbuild",
			"label": "For DrumRobot",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/*.o",  // ${file} 제거하고 오브젝트 파일들만 추가
				"-o",
				"${workspaceFolder}/src/${fileBasenameNoExtension}", // 출력 디렉토리 및 파일명 설정
				"-I${workspaceFolder}/include",  // 헤더 파일 경로 추가
				"-lm"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false  // 기본 빌드 태스크는 make를 사용하므로 이를 false로 설정
			},
			"detail": "Task generated by Debugger."
		}
		
        
    ]
}